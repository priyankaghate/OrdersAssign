<%= form_for(@product, class:'form-horizontal') do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sku, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :sku,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.number_field :quantity,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :length, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :length,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :width, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :width,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :height, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :height,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weight, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :weight,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cost, class: 'control-label  col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :cost,class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit(class: 'btn btn-default') %>
  </div>
<% end %>
